<div class="card mt-2">
    <div class="card-header">
        Add new book
    </div>
    <div class="card-body">
        <form method="post" action="/books/create">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
                <label>Price</label>
                <input type="number" class="form-control" name="price">
            </div>
            <div class="form-group">
                <label>Author</label>
                <input type="text" class="form-control" name="author">
            </div>
            <div class="form-group row">
                <label class="col-sm-2 control-label">Status</label>
                <div class="col-sm-10">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="status" checked type="radio" id="inlineRadio1" value="new">
                        <label class="form-check-label" for="inlineRadio1">New</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="status" type="radio" id="inlineRadio2" value="old">
                        <label class="form-check-label" for="inlineRadio2">Old</label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
